public class Solution 
{
    public int RomanToInt(string s) 
    {
        // Let's try reading this in from back to front
        // Since the case of IV = 4, must subtract 5-1
        // or something like it may show up
        int currentValue = 0;
        int totalValue = 0;
        int previousValue = 0;

        for (int i = (s.Length)-1; i >= 0; i--)
        {
            // First, convert from letters to int numbers
            switch (s[i])
            {
                case ('I'):
                    currentValue = 1;
                    break;
                case ('V'):
                    currentValue = 5;
                    break;
                case ('X'):
                    currentValue = 10;
                    break;
                case ('L'):
                    currentValue = 50;
                    break;
                case ('C'):
                    currentValue = 100;
                    break;
                case ('D'):
                    currentValue = 500;
                    break;
                case ('M'):
                    currentValue = 1000;
                    break;
            }
            // See if number should be added or subtracted
            if (currentValue >= previousValue)
            {
                totalValue += currentValue;
            }
            else
            {
                totalValue -= currentValue;
            }
            
            // Set up previous value for later iterations
            previousValue = currentValue;
        }
        return totalValue; 
    }
}
